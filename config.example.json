{
  "campaign_id": "spring-campaign",
  "paths": {
    "leads_file": "leads.txt",
    "smtps_file": "smtps.txt",
    "templates_dir": "templates",
    "logs_dir": "logs",
    "state_dir": "state"
  },
  "concurrency": {
    "max_workers": 5
  },
  "retry": {
    "max_attempts_per_lead": 3,
    "backoff_seconds": [1, 3, 7]
  },
  "timeouts": {
    "connect_timeout_seconds": 10,
    "send_timeout_seconds": 20,
    "job_timeout_seconds": 30
  },
  "circuit_breaker": {
    "fail_threshold": 5,
    "cooldown_seconds": 60,
    "disable_after_cooldowns": 2
  },
  "allowlist": ["example.com"],
  "domains_allowlist": ["example.com"],
  "batch": {"batch_size": 100},
  "smtp_hosts": {
    "smtp1.example.com": {
      "hosts": ["smtp1.example.com", "smtp1-alt.example.com"],
      "hostname_rotation": {"enabled": true, "batch_size": 200}
    }
  },
  "profiles": {
    "A": {
      "subject_pool": ["Hello from profile A"],
      "fromname_pool": ["Support Team"],
      "x_mailer": "zessen-go/A",
      "template_file": "profileA.html",
      "link_params": {"ref": "a"}
    },
    "B": {
      "subject_pool": ["Hello from profile B"],
      "fromname_pool": ["Marketing"],
      "x_mailer": "zessen-go/B",
      "template_file": "profileB.html",
      "link_params": {"ref": "b"}
    },
    "C": {
      "subject_pool": ["Hello from profile C"],
      "fromname_pool": ["Sales"],
      "x_mailer": "zessen-go/C",
      "template_file": "profileC.html",
      "link_params": {"ref": "c"}
    }
  }
}
